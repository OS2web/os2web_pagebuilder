{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
] %}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}

      {# Begin - heading #}
      {{ content.field_os2web_slideshow_heading }}
      {# End - heading #}

      {# Begin - images #}
      {{ content.field_os2web_slideshow_image }}
      {# End - images #}

    {% endblock %}
  </div>
{% endblock paragraph %}
