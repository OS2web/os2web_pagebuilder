{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  background_color ? 'background-color--' ~ background_color|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  paragraph.isPublished() ? null : 'paragraph--unpublished'
] %}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}

      {# Begin - heading #}
      {{ content.field_os2web_box_heading }}
      {# End - heading #}

      {# Begin - body #}
      {{ content.field_os2web_box_body }}
      {# End - body #}

    {% endblock %}
  </div>
{% endblock paragraph %}
