{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
] %}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}

      {# Begin - heading #}
      {{ content.field_os2web_simple_text_heading }}
      {# End - heading #}

      {# Begin - subheading #}
      {{ content.field_os2web_simple_text_subheading }}
      {# End - subheading #}

      {# Begin - body #}
      {{ content.field_os2web_simple_text_body }}
      {# End - body #}

    {% endblock %}
  </div>
{% endblock paragraph %}
